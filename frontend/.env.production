# Production Environment for Render Deployment
# This file is used automatically in production builds

# Suppress all build warnings
VITE_SUPPRESS_WARNINGS=true

# Build optimizations
CI=false
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=true
SKIP_PREFLIGHT_CHECK=true
BUILD_IGNORE_WARNINGS=true

# Backend API URL (Render backend service)
VITE_API_URL=https://dediwarn-backend.onrender.com

# WebSocket URL (same as backend for production)
VITE_WEBSOCKET_URL=wss://dediwarn-backend.onrender.com

# OpenWeatherMap API Key (Demo key for now)
VITE_OPENWEATHER_API_KEY=demo_key

# Emergency Services Configuration
VITE_DEFAULT_EMERGENCY_NUMBER=911
VITE_EMERGENCY_SERVICES_ENABLED=true

# Real-time Data Configuration
VITE_REALTIME_DATA_ENABLED=true
VITE_AUTO_REFRESH_INTERVAL=120000
VITE_CACHE_TTL=300000

# Features Flags
VITE_EARTHQUAKE_ALERTS=true
VITE_WEATHER_ALERTS=true
VITE_TRAFFIC_INCIDENTS=true
VITE_HOSPITAL_CAPACITY=true
VITE_VOLUNTEER_ALERTS=true

# Security Configuration
VITE_RATE_LIMIT_ENABLED=true
VITE_MAX_API_CALLS_PER_MINUTE=60
VITE_EMERGENCY_BYPASS_RATE_LIMIT=true

# Build Configuration
VITE_NODE_ENV=production
VITE_BUILD_TARGET=production

{
  "name": "disaster-management-backend",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Disaster Management Application - Backend (Express + TypeScript)",
  "main": "dist/server.js",
  "engines": {
    "node": "18.x",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 \"src/**/*.{json,env}\" dist/",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 100",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t disaster-backend .",
    "docker:run": "docker run -p 3000:3000 -p 8080:8080 disaster-backend",
    "migrate": "npx typeorm migration:run",
    "seed": "ts-node src/seeds/index.ts",
    "cluster": "pm2 start ecosystem.config.js",
    "monitor": "pm2 monit"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.33.2",
    "@socket.io/redis-adapter": "^8.3.0",
    "@solana/web3.js": "^1.78.4",
    "@types/nodemailer": "^6.4.17",
    "@types/validator": "^13.15.2",
    "agenda": "^5.0.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.3",
    "cluster": "^0.7.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "http-proxy-middleware": "^2.0.6",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "methods": "^1.1.2",
    "mongodb": "^6.1.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "mqtt": "^5.0.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "node-cron": "^3.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.3",
    "pm2": "^5.3.0",
    "prom-client": "^14.2.0",
    "redis": "^4.6.8",
    "sharp": "^0.32.4",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^5.8.0",
    "typeorm": "^0.3.17",
    "validator": "^13.15.15",
    "web-push": "^3.6.7",
    "web3": "^4.1.1",
    "winston": "^3.10.0",
    "copyfiles": "^2.4.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/methods": "^1.1.4",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.9",
    "@types/node-cron": "^3.0.8",
    "@types/supertest": "^2.0.12",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^5.0.2"
  },
  "keywords": [
    "disaster-management",
    "express",
    "typescript",
    "mongodb",
    "backend",
    "api"
  ],
  "author": "SANSKAR",
  "license": "MIT"
}

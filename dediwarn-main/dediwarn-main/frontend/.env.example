# Environment Configuration
# Copy this file to .env and add your API keys

# OpenWeatherMap API Key (Required for weather data)
# Get your free API key at: https://openweathermap.org/api
# Sign up and copy your API key here:
VITE_OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# USGS Earthquake API (No key required - it's free and open)
# The USGS API is used automatically for earthquake data

# Example usage:
# VITE_OPENWEATHER_API_KEY=abc123def456ghi789jkl012mno345

# Note: After adding your API key, restart the development server for changes to take effect

# =======================================================
# REAL-TIME DATA INTEGRATION API KEYS
# =======================================================

# Traffic Data (HERE API)
# Sign up at developer.here.com for free tier
REACT_APP_HERE_TRAFFIC_API_KEY=your_here_api_key_here

# Hospital Data (Custom integration - implement with local hospital systems)
REACT_APP_HOSPITAL_API_KEY=your_hospital_api_key_here

# Google Maps (for mapping and geocoding)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# WebSocket URL for real-time updates
REACT_APP_WEBSOCKET_URL=ws://localhost:3001

# Backend API URL
REACT_APP_API_URL=http://localhost:3001

# Emergency Services Configuration
REACT_APP_DEFAULT_EMERGENCY_NUMBER=911
REACT_APP_EMERGENCY_SERVICES_ENABLED=true

# Real-time Data Configuration
REACT_APP_REALTIME_DATA_ENABLED=true
REACT_APP_AUTO_REFRESH_INTERVAL=120000
REACT_APP_CACHE_TTL=300000

# Features Flags
REACT_APP_EARTHQUAKE_ALERTS=true
REACT_APP_WEATHER_ALERTS=true
REACT_APP_TRAFFIC_INCIDENTS=true
REACT_APP_HOSPITAL_CAPACITY=true
REACT_APP_VOLUNTEER_ALERTS=true

# Security Configuration
REACT_APP_RATE_LIMIT_ENABLED=true
REACT_APP_MAX_API_CALLS_PER_MINUTE=60
REACT_APP_EMERGENCY_BYPASS_RATE_LIMIT=true
